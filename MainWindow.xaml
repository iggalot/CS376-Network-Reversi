<Window x:Class="Reversi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reversi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="Connect to Server" Click="Button_ConnectClick"></Button>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <Label Name="lbIndex" Content="TextBlock here"/>
                    <Label Name="lbCurrentPlayer" Content="TextBlock here"/>
                    <TextBlock Name="tbGameboard" Width="400" Height="200"></TextBlock>
                    <Label Name="lbStatus" Content="Status Label here"></Label>
                </StackPanel>

                <TextBox Name="tbIndex" Height="25" Width="100"/>

                <Button Height="100" Width="100" Content="Submit Turn" Click="Button_Click"></Button>

            </StackPanel>
        </StackPanel>

        
    </Grid>
</Window>
